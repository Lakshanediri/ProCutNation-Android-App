<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_auth"
    tools:context=".AddTaskActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add New Task"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/app_light_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <EditText
                        android:id="@+id/editTextTaskName"
                        style="@style/AddTaskEditText"
                        android:hint="Task name"
                        android:inputType="textCapSentences" />

                    <EditText
                        android:id="@+id/editTextTaskHours"
                        style="@style/AddTaskEditText"
                        android:hint="Task Hours"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/editTextMilestoneHours"
                        style="@style/AddTaskEditText"
                        android:hint="Milestone Hours"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/editTextStartDate"
                        style="@style/AddTaskEditText"
                        android:focusable="false"
                        android:hint="Task Start Date" />

                    <EditText
                        android:id="@+id/editTextEndDate"
                        style="@style/AddTaskEditText"
                        android:focusable="false"
                        android:hint="Task End Date" />

                    <Spinner
                        android:id="@+id/spinnerPriority"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/edittext_background"
                        android:layout_marginBottom="16dp"/>

                    <EditText
                        android:id="@+id/editTextPomodoroSettings"
                        style="@style/AddTaskEditText"
                        android:hint="Pomodoro Timer Settings (e.g., 25,5)"
                        android:inputType="text" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnAddTAsk"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/button_orange_background"
                        android:text="Add Task"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>